generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id        Int      @id @default(autoincrement())
  tmdbId    Int     @unique
  title     String
  release_date  String?
  overview  String?
  poster_path String?
  backdrop_path String?
  runtime Int?
  genres  String[]
  createdAt DateTime @default(now())
}

model User {
  id          Int      @id @default(autoincrement())
  username    String
  email       String

  // Yksi käyttäjä voi omistaa monta ryhmää
  ownedGroups Group[]  @relation("GroupOwner")

  // Yksi käyttäjä voi kuulua moneen ryhmään
  groups      Group[]  @relation("GroupMembers")
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String

  // Omistaja (yksi user)
  ownerId   Int
  owner     User     @relation("GroupOwner", fields: [ownerId], references: [id])

  // Jäsenet (moni user)
  members   User[]   @relation("GroupMembers")

  createdAt DateTime @default(now())
}
