generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id              Int      @id @default(autoincrement())
  tmdbId          Int      @unique
  title           String
  overview        String?
  posterUrl       String?
  backdropUrl     String?
  releaseDate     DateTime?
  runtimeMinutes  Int?
  genres          String[]
  updatedAt       DateTime @updatedAt
}

enum MovieListType {
  popular
  top_rated
  now_playing
  upcoming
}

model MovieListCache {
  id          Int           @id @default(autoincrement())
  listType    MovieListType @map("list_type")
  page        Int
  payloadJson Json          @map("payload_json")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@unique([listType, page])
  @@map("movie_list_cache")
}

model User {
  id          Int      @id @default(autoincrement())
  username    String
  email       String
  firstname   String
  lastname    String

  // Yksi käyttäjä voi omistaa monta ryhmää
  ownedGroups Group[]  @relation("GroupOwner")

  // Yksi käyttäjä voi kuulua moneen ryhmään
  groups      Group[]  @relation("GroupMembers")

  refreshTokens RefreshToken[]
  passwordHash   String
}

model Group {
  id        Int      @id @default(autoincrement())
  name      String

  // Omistaja (yksi user)
  ownerId   Int
  owner     User     @relation("GroupOwner", fields: [ownerId], references: [id])

  // Jäsenet (moni user)
  members   User[]   @relation("GroupMembers")

  createdAt DateTime @default(now())
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  tokenId   String   @unique
  tokenHash String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())
  revoked   Boolean  @default(false)
}
